#!/bin/sh
# postinst script for fileshare
#
# see: dh_installdeb(1)

mkdir /usr/share/fileshare
mv fileshare /usr/share/fileshare
mv nw.pak /usr/share/fileshare
mv icudtl.dat /usr/share/fileshare
mv ldap /usr/share/fileshare
mv shareconfig /usr/share/fileshare
mv fileshareserver /usr/share/fileshare
chmod +x /usr/share/fileshare/fileshare
chmod +x /usr/share/fileshare/ldap
chmod +x /usr/share/fileshare/shareconfig
chmod +x /usr/share/fileshare/fileshareserver
ln -s /usr/share/fileshare/fileshare /usr/bin
ln -s /usr/share/fileshare/fileshare /bin
ln -s /usr/share/fileshare/fileshare /usr/local/bin
ln -s /usr/share/fileshare/ldap /usr/bin
ln -s /usr/share/fileshare/ldap /bin
ln -s /usr/share/fileshare/ldap /usr/local/bin
ln -s /usr/share/fileshare/shareconfig /usr/bin
ln -s /usr/share/fileshare/shareconfig /bin
ln -s /usr/share/fileshare/shareconfig /usr/local/bin

sed -i '/exit 0/i\\/usr\/share\/fileshare\/fileshareserver' /etc/rc.local

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
